# EditorConfig: http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
indent_size = 4
max_line_length = 119

# Minified static files shouldn't be changed
[{{cookiecutter.project_slug}}/static/**]
indent_style = ignore
insert_final_newline = ignore
